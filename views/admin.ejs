<!DOCTYPE html>
<html lang = "en">
<head>
    <meta charset = "UTF-8">
    <meta name = "viewport" content = "width=device-width, initial-scale=1.0">
    <title>It's a secret to everybody.</title>
    <script src = "//code.jquery.com/jquery-3.7.1.js"></script>
    <script src = "//cdn.datatables.net/2.3.7/js/dataTables.js"></script>
    <link rel = "stylesheet" href = "//cdn.datatables.net/2.3.7/css/dataTables.dataTables.css" />
</head>
<body>
    <h1>Entry Listings</h1>
    <table id = "entry-table" class = "display">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Job Title</th>
                <th>Company</th>
                <th>LinkedIn URL</th>
                <th>Email</th>
                <th>Met Where?</th>
                <th>Other Meeting?</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            <% entries.forEach(entry => { %>
                <tr>
                    <td><%= entry.timestamp.toLocaleString() %></td>
                    <td><%= entry.first_name %> <%= entry.last_name %></td>
                    <td><%= entry.job_title %></td>
                    <td><%= entry.company %></td>
                    <td><a href = "<%= entry.linkedin %>"><%= entry.first_name %>'s Profile</a></td>
                    <td><%= entry.email %></td>
                    <td><%= entry.meet %></td>
                    <td><%= entry.other %></td>
                    <td><%= entry.comments %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <script defer>
        let table = new DataTable('#entry-table');
    </script>
</body>
</html>